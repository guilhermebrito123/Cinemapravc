@model Cinemapravc.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/cssUsuarios/Create.css"/>
</head>
<body>

<h1 class="text-center mt-5">Cadastre-se já!</h1>
<hr />
<div class="row justify-content-center">
    <img src="~/img/login.png" class="col-4 align-content-center img-fluid" alt="imagem de login" />
    <div class="col-4 align-content-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-floating">
                <input asp-for="Nome" class="form-control" placeholder=" "/>
                <label asp-for="Nome" class="control-label"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Email" class="form-control" placeholder=" "/>
                <label asp-for="Email" class="control-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="CPF" class="form-control" placeholder=" "/>
                <label asp-for="CPF" class="control-label"></label>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Telefone" class="form-control" placeholder=" "/>
                <label asp-for="Telefone" class="control-label"></label>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Senha" class="form-control" placeholder=" "/>
                <label asp-for="Senha" class="control-label"></label>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<Cinemapravc.Models.Usuario.TipoUsuario>()" class="form-control" placeholder=" "></select>
                <label asp-for="Tipo" class="control-label"></label>                
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
                <div class="form-group text-center mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-outline-primary col-12" />
            </div>
        </form>    
        <div class="text-center">
                <a asp-action="Index" class="text-decoration-none btn btn-outline-success shadow-lg col-5 mt-5">Voltar ao início</a>
        </div>
    </div>
</div>



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
